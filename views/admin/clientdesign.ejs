<div class="row metro breadcrumbs">
  <div class="col-sm-12">
    <h2>
      <a href="/admin">Admin</a> > 
      <a href="/admin/client/dashboard/<%= client.id %>"><%= client.name %></a> > 
      <a href="javascript:;">Design</a>
    </h2>
  </div>
</div>


<form data-parsley-validate="" action="/admin/client/update" method="post">


	<div class="col-md-6">

		<fieldset>
			<legend><%= __('Design configuration') %></legend>

			<input type="hidden" name="id" value="<%= client.id %>"/>

		  <div class="form-group">
		    <label>Visual aspect</label>
		    <div class="radio">
		      <label>
		      	<% if (client.aspect == 'full_page') { %> 
		        <input type="radio" name="aspect" id="basic" value="full_page" checked="">
		      	<% } else { %>
		        <input type="radio" name="aspect" id="basic" value="full_page">
	      		<% } %>
		        Full page application
		      </label>
		    </div>
		    <div class="radio">
		      <label>
		      	<% if (client.aspect == 'webpart') { %> 
		        <input type="radio" name="aspect" id="basic" value="webpart" checked="">
		      	<% } else { %>
		        <input type="radio" name="aspect" id="basic" value="webpart">
	      		<% } %>
		        SharePoint WebPart
		      </label>
		    </div>
		  </div>
  


			<div class="form-group">
				<label>Bootstrap theme</label>
				<select class="form-control" name="theme">
				<% sails.config.themes.forEach(function (theme) { %>
					<% if (client.theme == theme) { %>
					<option value="<%= theme %>" selected="selected"><%= theme %></option>
					<% } else { %>
					<option value="<%= theme %>"><%= theme %></option>
					<% } %>
				<% }) %>
				</select>
			</div>



		</fieldset>

		<div class="pull-right">
			<button type="submit" class="btn btn-primary">Update</button>
			<a href="/admin/client/dashboard/<%= client.id %>" class="btn btn-default">Cancel</a>
		</div>



	</div>



</form>





	


